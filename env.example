# Environment variables template
# Copy this file to .env and fill in your values

# Database Configuration (using existing PostgreSQL Docker setup)
# Make sure your PostgreSQL Docker container is running on localhost:5432
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=fashly

# JWT Configuration
JWT_SECRET=development-jwt-secret-key-not-for-production
JWT_EXPIRATION=24h

# HuggingFace Configuration (for Virtual Try-On)
# Get token from: https://huggingface.co/settings/tokens
HF_TOKEN=your-huggingface-token-here

# Google Cloud Storage Configuration
# Set real values to enable GCS features
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-gcs-bucket-name
GCP_KEY_FILE=path/to/your/service-account-key.json

# AWS S3 Configuration (keeping for backward compatibility)
# Set real values to enable S3 features if still needed
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dummy-access-key-id
AWS_SECRET_ACCESS_KEY=dummy-secret-access-key
AWS_S3_BUCKET=dummy-bucket-name

# Application Configuration
NODE_ENV=development
PORT=3001